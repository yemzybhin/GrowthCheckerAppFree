<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="1000dp"
        android:layout_height="1000dp"
        android:background="@color/MyTransparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" ></View>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:layout_marginBottom="60dp"
        app:cardBackgroundColor="@color/black"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardquotetoshare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/djnjw">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="270dp"
                            android:background="@drawable/quotebg"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/quoteshare"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:gravity="center"
                                android:text="The utmost way of getting things done is to conduct a series of electrporij hgchjh jihc jchid ijhcij jihcijdokdjc."
                                android:fontFamily="@font/productsansregular"
                                android:textSize="16sp"
                                android:textColor="@color/white"></TextView>

                            <TextView
                                android:id="@+id/authorshare"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Theophilus egbum"
                                android:layout_gravity="right"
                                android:textColor="@color/primarycolor1"
                                android:textStyle="italic"
                                android:textSize="12sp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="20dp"></TextView>
                        </LinearLayout>



                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/primarycolor2"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_gravity="center"
                            android:src="@drawable/playstore"></ImageView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="20dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp">
                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_margin="5dp"
                                android:src="@drawable/logo"></ImageView>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" GROWTH CHECKER APP: "
                            android:textSize="10sp"
                            android:fontFamily="@font/productsansbold"
                            android:textColor="@color/primarycolor1"
                            android:layout_marginTop="2dp"
                            android:layout_gravity="center"></TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Break Addictions"
                            android:textSize="10sp"
                            android:textStyle="italic"
                            android:fontFamily="@font/productsansbold"
                            android:textColor="@color/primary5"
                            android:layout_marginTop="2dp"
                            android:layout_gravity="center"></TextView>

                    </LinearLayout>



                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/quotesharebutton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Share Image"
                android:textColor="@color/primarycolor2"
                android:textSize="10dp"
                android:textStyle="bold"
                app:cornerRadius="20dp"></Button>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/quotecancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/primary4"
        app:cardCornerRadius="30dp">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="20dp"
            android:src="@drawable/cancel2"></ImageView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>