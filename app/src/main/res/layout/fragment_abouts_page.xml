<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Pages.AboutsPage">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primarycolor1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardView4"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/productsansbold"
                android:text="EARN POINTS WITH GOOGLE ADS"
                android:textColor="@color/primarycolor2"
                android:textSize="16sp"
                android:textStyle="italic"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/productsansregular"
                android:lineSpacingExtra="4dp"
                android:text="By watching Ad videos, you earn more tokens. Click the button below to view videos."
                android:textColor="@color/primary3"
                android:textSize="15sp"></TextView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/greet"></ImageView>

            <Button
                android:id="@+id/Loadadd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cornerRadius = "20dp"
                android:backgroundTint="@color/primarycolor2"
                android:text="Load Ad: +20 Points"
                android:textColor="@color/white"></Button>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/admobadspace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/primarycolor2"
                    app:cardCornerRadius="20dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/adsicon"></ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AD 1 LOADED\nVIEW"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:lineSpacingExtra="7dp"
                            android:fontFamily="@font/blippolightsf"
                            android:layout_margin="10dp"
                            android:gravity="center"></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/unityadspace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/primarycolor2"
                    app:cardCornerRadius="20dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/adsicon"></ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AD 2 LOADED\nVIEW"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:lineSpacingExtra="7dp"
                            android:fontFamily="@font/blippolightsf"
                            android:layout_margin="10dp"
                            android:gravity="center"></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/facebookadspace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/primarycolor2"
                    app:cardCornerRadius="20dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/adsicon"></ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AD 3 LOADED\nVIEW"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:lineSpacingExtra="7dp"
                            android:fontFamily="@font/blippolightsf"
                            android:layout_margin="10dp"
                            android:gravity="center"></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/productsansbold"
                android:text="EARN TOKENS WITH CUSTOMIZED ADS"
                android:textColor="@color/primarycolor2"
                android:textSize="16sp"
                android:textStyle="italic"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/productsansregular"
                android:lineSpacingExtra="4dp"
                android:text="By watching customized Ad videos, you earn more tokens. Click the button below to view videos."
                android:textColor="@color/primary3"
                android:textSize="15sp"></TextView>
            <Button
                android:id="@+id/Loadadd22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cornerRadius = "20dp"
                android:backgroundTint="@color/primarycolor2"
                android:text="VIEW"
                android:textColor="@color/white"></Button>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/productsansbold"
                android:text="BUY TOKENS"
                android:textColor="@color/primarycolor2"
                android:textSize="16sp"
                android:textStyle="italic"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/productsansregular"
                android:lineSpacingExtra="4dp"
                android:text="Instead of watching ads for tokens, you can also buy tokens. Buy 300 study tokens for 55 naira. Click the buy button to authenticate purchase."
                android:textColor="@color/primary3"
                android:textSize="15sp"></TextView>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/buycoins"></ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/productsansbolditalic"
                    android:gravity="center"
                    android:text="300 Tokens : 55 Naira"
                    android:textColor="@color/primarycolor2"
                    android:textSize="18sp"></TextView>

                <Button
                    android:id="@+id/buy3000Points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cornerRadius = "20dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/primarycolor2"
                    android:text="Buy"
                    android:textColor="@color/white"></Button>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/productsansbold"
                android:text="SUMMARY"
                android:textColor="@color/primarycolor2"
                android:textSize="16sp"
                android:textStyle="italic"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/productsansregular"
                android:lineSpacingExtra="4dp"
                android:text="@string/summary"
                android:textColor="@color/primarycolor2"
                android:textSize="15sp"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/productsansbold"
                android:text="ABOUT US"
                android:textColor="@color/primarycolor2"
                android:textSize="16sp"
                android:textStyle="italic"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/productsansregular"
                android:lineSpacingExtra="4dp"
                android:text="@string/aboutus"
                android:textColor="@color/primarycolor2"
                android:textSize="15sp"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/productsansbold"
                android:text="MORE APPS FROM US"
                android:textColor="@color/primarycolor2"
                android:textSize="16sp"
                android:textStyle="italic"></TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/primarycolor1"
                app:cardCornerRadius="20dp">
                <TextView
                    android:id="@+id/tv_retry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="264dp"
                    android:background="@color/primarycolor2"
                    android:padding="10dp"
                    android:text="Retry!.."
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold"></TextView>

                <ProgressBar
                    android:id="@+id/lt_loader"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:foregroundGravity="center"
                    android:indeterminate="true"></ProgressBar>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_moreapps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:scrollbars="vertical"
                    tools:listitem="@layout/singleapp"></androidx.recyclerview.widget.RecyclerView>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:layout_margin="20dp"
                    android:src="@drawable/rateus"></ImageView>

                <Button
                    android:id="@+id/btn_rateus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/white"
                    android:text="Rate Us"
                    android:textColor="@color/primarycolor2"
                    app:cornerRadius="20dp"></Button>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="140dp"
                android:layout_marginRight="20dp"
                android:text="By Adeyemi Oduyungbo"
                android:textColor="@color/primarycolor2"></TextView>
        </LinearLayout>
    </ScrollView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primarycolor1"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:text="ABOUT"
            android:textAllCaps="true"
            android:textColor="@color/primarycolor2"
            android:textSize="20sp"
            android:textStyle="bold"></TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:background="@color/white"></View>
    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/adprogress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ProgressBar>
    <androidx.cardview.widget.CardView
        android:id="@+id/adspace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/primarycolor2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:layout_gravity="center"
                android:background="@color/primarycolor2"
                android:textColor="@color/MenuItem"
                android:textSize="12sp"
                android:text="Advert"></TextView>
            <ImageView
                android:id="@+id/adimage"
                android:layout_width="70dp"
                android:background="@color/primarycolor1"
                android:layout_gravity="center"
                android:layout_height="70dp"></ImageView>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>