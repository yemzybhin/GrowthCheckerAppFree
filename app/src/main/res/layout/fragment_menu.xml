<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PopUp_Fragments.Menu">

    <View
        android:layout_width="1000dp"
        android:layout_height="1000dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" ></View>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/menubg"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cd_homemenucancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00F5F6FC"
            app:cardElevation="0dp">


            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_margin="15dp"
                android:src="@drawable/menucancel">

            </ImageView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="25dp">

                <ImageView
                    android:id="@+id/iv_menuimage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/a40" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_menuname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Amila"
                    android:textColor="@color/MenuItem"
                    android:textSize="13sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/tv_menuage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="22 years old"
                    android:textColor="@color/MenuItem"
                    android:textSize="13sp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cd_MenuMyInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#00F5F6FC"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="10dp"
                android:text="My Info"
                android:textColor="@color/MenuItem"
                android:textSize="11sp"
                android:textStyle="bold"></TextView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cd_menuAddiction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#00F5F6FC"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="10dp"
                android:text="Addiction"
                android:textColor="@color/MenuItem"
                android:textSize="11sp"
                android:textStyle="bold"></TextView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cd_menuSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#00F5F6FC"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="20dp"
                android:text="About"
                android:textColor="@color/MenuItem"
                android:textSize="11sp"
                android:textStyle="bold"></TextView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cd_premiumapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:backgroundTint="#00F5F6FC"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="20dp"
                android:text="Premium Version"
                android:textColor="@color/MenuItem"
                android:textSize="11sp"
                android:textStyle="bold"></TextView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="#00F5F6FC"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="1dp"
                android:text="Current Challenge"
                android:textColor="@color/MenuItem"
                android:textSize="13sp"
                android:textStyle="bold"></TextView>

            <View
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:background="@color/MenuItem"></View>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/challengesicon"></ImageView>

                <TextView
                    android:id="@+id/menu_challengeungoing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="5dp"
                    android:text="No Ungoing Challenge"
                    android:textColor="@color/MenuItem"
                    android:textSize="11sp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="#00F5F6FC"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="1dp"
                android:text="Current Challenge Progress"
                android:textColor="@color/MenuItem"
                android:textSize="13sp"
                android:textStyle="bold"></TextView>

            <View
                android:layout_width="160dp"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:background="@color/MenuItem"></View>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/achievement1"></ImageView>

                <TextView
                    android:id="@+id/menu_percent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="5dp"
                    android:text="0%"
                    android:textColor="@color/MenuItem"
                    android:textSize="11sp"
                    android:textStyle="bold"></TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp">

                    <View
                        android:id="@+id/baseprogressview"
                        android:layout_width="70dp"
                        android:layout_height="3.5dp"
                        android:background="@color/MenuItem"></View>

                    <View
                        android:id="@+id/menu_percentshow"
                        android:layout_width="70dp"
                        android:layout_height="3.5dp"
                        android:background="@color/appgreen"></View>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL_menuMyrating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="#00F5F6FC"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="1dp"
                android:text="Rating"
                android:textColor="@color/MenuItem"
                android:textSize="11sp"
                android:textStyle="bold"></TextView>

            <View
                android:layout_width="35dp"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:background="@color/MenuItem"></View>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/menu_levelimage"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="8.5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="1dp"
                    android:src="@drawable/l1"></ImageView>

                <TextView
                    android:id="@+id/menu_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10.8dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="5dp"
                    android:text="SOLID IMPROVEMENT"
                    android:textColor="@color/MenuItem"
                    android:textSize="11sp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>